<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="THEME_GLOBAL_APP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/rojo_pastel</item>
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialButtonStyle">@style/STYLE_MATERIAL_BUTTON</item>
        <item name="android:textViewStyle">@style/STYLE_TEXT_PARRAFOS</item>
        <item name="textInputStyle">@style/STYLE_MATERIAL_TEXT_INPUT_lAYOUT</item>
        <item name="materialCalendarTheme">@style/STYLE_MATERIAL_CALENDAR_PICKER</item>
    </style>

    <style name="THEME_SPLASH_SCREEN" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blanco</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/THEME_GLOBAL_APP</item>
    </style>

    <style name="THEME_TOOLBAR_ACTIVITY" parent="THEME_GLOBAL_APP">
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
    </style>

    <style name="STYLE_MATERIAL_TEXT_INPUT_lAYOUT" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/STYLE_CUSTOM_MATERIAL_TEXT_INPUT_lAYOUT</item>
    </style>

    <style name="STYLE_TEXT_TITULOS" parent="android:Widget.TextView">
        <item name="android:textColor">@color/titulos</item>
        <item name="fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="STYLE_TEXT_PARRAFOS" parent="android:Widget.TextView">
        <item name="android:textColor">@color/parrafos</item>
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="STYLE_MATERIAL_BUTTON" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="STYLE_MATERIAL_BUTTON_OUTLINED" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">15dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_buttoon_outlined</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/contorno</item>
        <item name="strokeWidth">1.225dp</item>
    </style>

    <style name="STYLE_CUSTOM_MATERIAL_TEXT_INPUT_lAYOUT" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/cafe</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="SPINNER" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorPrimary">@color/amarillo</item>
    </style>

    <style name="APARIENCIA_MATERIAL_TOOLBAR_TITLE_TEXT" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="STYLE_MATERIAL_CALENDAR_PICKER" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="materialCalendarHeaderTitle">@style/STYLE_TITLE_MATERIAL_CALENDAR_PICKER</item>
        <item name="materialCalendarHeaderSelection">@style/STYLE_DATE_SELECTION_MATERIAL_CALENDAR_PICKER</item>
        <item name="materialCalendarHeaderToggleButton">@style/STYLE_HIDE_TOGGLE_BUTTON_MATERIAL_CALENDAR_PICKER</item>
    </style>

    <style name="STYLE_DATE_SELECTION_MATERIAL_CALENDAR_PICKER" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="STYLE_TITLE_MATERIAL_CALENDAR_PICKER" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="STYLE_HIDE_TOGGLE_BUTTON_MATERIAL_CALENDAR_PICKER" parent="Widget.AppCompat.Button">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/parrafos</item>
        <item name="fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/parrafos</item>
        <item name="fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/CustomCornersDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomTitleDialog</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomTextDialog</item>
    </style>

    <style name="CustomTextDialog" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomCornersDialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="CustomTitleDialog" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/MyTitle_TextAppearance</item>
    </style>

    <style name="MyTitle_TextAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="CUSTOM_CHIP_STYLE" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipIconEnabled">true</item>
    </style>

</resources>